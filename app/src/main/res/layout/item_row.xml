<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="cz.lhoracek.databinding.model.Opportunity" />

        <variable
            name="oddHandler"
            type="kotlin.jvm.functions.Function1&lt;String, kotlin.Unit>" />

        <variable
            name="deleteHandler"
            type="kotlin.jvm.functions.Function1&lt;String, kotlin.Unit>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@{item.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:itemLayout="@{@layout/item_odd}"
            android:layout_marginHorizontal="6dp"
            app:items="@{item.odds}"
            app:onItemClick="@{oddHandler}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="@{() -> deleteHandler.invoke(item.id)}"
            android:src="@drawable/ic_baseline_delete_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#AA5555"
            tools:text="Oportunity title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
